#!groovy

pipeline {
    agent any
    tools {
        jdk 'openjdk-11'
    }
    stages{
        stage('Git Checkout'){
            steps{
                script{
                    env.GIT_COMMIT = checkout scm
                    sh "echo GIT_COMMIT : ${env.GIT_COMMIT}"
                }
            }
        }
        stage('Gradlew Build'){
            steps{
                script{
                    sh """
                    chmod +x ./gradlew
                    ./gradlew build
                    """
                }
            }
        }
        stage('Test'){
            steps{
                script{
                    sh "./gradlew test"
                    sh "./gradlew check"
                    sh "echo 'generating coverage report'"
                    sh "./gradlew codeCoverageReport"
                    sh "echo 'send it to codecov'"
                    sh "curl -s https://codecov.io/bash | bash"
                }
            }
        }
        stage('Push image to Harbor'){
            steps{
                script{
                    docker.withRegistry(HARBOR_REPOSITORY, HARBOR_CREDENTIAL){
                        sh """
                        ./gradlew jibDockerBuild
                        echo 'gaonna_platform/api:${env.GIT_COMMIT}'
                        echo 'gaonna_platform/admin:${env.GIT_COMMIT}'
                        """
                        docker.image('api:latest').push("gaonna_platform/api:${env.GIT_COMMIT}")
                        docker.image('admin:latest').push("gaonna_platform/admin:${env.GIT_COMMIT}")
                    }
                }
            }
        }
    }
}
